<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Pic</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= link_to image_tag( picture.pic.thumb ), picture %></td>
    <td><%= picture.title %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture), :class=>"btn btn-primary btn-mini" %></td>
    <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-mini btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Picture', new_picture_path %>
